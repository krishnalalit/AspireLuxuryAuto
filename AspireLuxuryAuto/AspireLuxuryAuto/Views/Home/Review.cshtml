                            <div class="img-wrap">
                                <img src="@Url.Content("~/Content/images/z-img-1.png")" alt="img" class="img-responsive">
                            </div>
                        </div>
                        <div class="r-return-block type-2 style-3">
                            <div class="text-wrap">
                                <div class="t-title">2016 Lamborghini Aventador</div>
                                <div class="t-subtitle">Luxury Sports Car</div>
                                <ul class="metadata">
                                    <li>2 seats</li>
                                    <li>4 bags</li>
                                    <li>15 mpg</li>
                                    <li>airbags</li>
                                    <li>manual/auto</li>
                                    <li>ac</li>
                                </ul>
                            </div>
                        </div>
                        <div class="checkblock type-2">
                            <h5 class="title">Choosen Options</h5>
                            <label>
                            <input type="checkbox" class="input-check" value="GPS" checked>
                            <span>GPS</span>
                            <span><b>$24</b>/Per Day</span>
                            </label>
                            <label>
                            <input type="checkbox" class="input-check" value="Theft Protection" checked>
                            <span>Theft Protection</span>
                            <span><b>$125</b>/Per Day</span>
                            </label>
                            <label>
                            <input type="checkbox" class="input-check" value="Rental Contract Fee" checked>
                            <span>Rental Contract Fee</span>
                            <span><b>$10</b>/Per Rental</span>
                            </label>
                            <label>
                            <input type="checkbox" class="input-check" value="Theft Protection" checked>
                            <span>Bicycle Rack</span>
                            <span><b>$40</b>/Per Rental</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
